---
import '@fontsource-variable/inter';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Servicios legales profesionales" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Abogados-landing/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50">
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: 'Inter Variable', sans-serif;
    scroll-behavior: smooth;
  }
</style>
