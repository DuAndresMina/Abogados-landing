---
const services = [
  {
    title: "Representación Legal en Juicios",
    items: [
      "Defensa en juicios civiles, penales y administrativos",
      "Representación en tribunales",
      "Presentación de demandas",
    ]
  },
  {
    title: "Asesoría Legal",
    items: [
      "Consultoría legal personalizada",
      "Redacción de contratos",
      "Planificación sucesoria",
      "Prevención de conflictos legales"
    ]
  },
  {
    title: "Negociación",
    items: [
      "Resolución alternativa de conflictos",
      "Mediación",
      "Redacción y revisión de contratos",
      "Acuerdos extrajudiciales"
    ]
  }
];
---
<section id="servicios" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-primary">Nuestros Servicios</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-gray-50 p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4 text-primary">{service.title}</h3>
          <ul class="space-y-2">
            {service.items.map(item => (
              <li class="flex items-start">
                <span class="text-green-500 mr-2">✓</span>
                <span>{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>