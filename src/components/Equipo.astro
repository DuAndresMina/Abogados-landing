---
// src/components/Equipo.astro

const team = [
  {
    name: "María González",
    role: "Abogada Penalista",
    experience: "12 años de experiencia",
    image: "/images/team/maria.jpg",
    specialties: ["Derecho Penal", "Derecho Laboral", "Derecho Civil"],
    contact: {
      linkedin: "#",
      email: "maria@bufetelegal.com"
    }
  },
  {
    name: "Carlos Martínez",
    role: "Abogado Corporativo",
    experience: "15 años de experiencia",
    image: "/images/team/carlos.jpg",
    specialties: ["Derecho Mercantil", "Fusiones y Adquisiciones", "Propiedad Intelectual"],
    contact: {
      linkedin: "#",
      email: "carlos@bufetelegal.com"
    }
  },
  {
    name: "Ana López",
    role: "Mediadora Familiar",
    experience: "10 años de experiencia",
    image: "/images/team/ana.jpg",
    specialties: ["Derecho de Familia", "Herencias", "Divorcios"],
    contact: {
      linkedin: "#",
      email: "ana@bufetelegal.com"
    }
  }
];
---

<section id="equipo" class="relative py-28 bg-gradient-to-b from-gray-50 to-white overflow-hidden">
  {/* Elementos decorativos de fondo */}
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-6xl opacity-5">
    <div class="w-96 h-96 -top-48 -left-48 bg-primary rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    {/* Encabezado */}
    <div class="max-w-2xl mx-auto text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 relative">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary">
          Nuestro Equipo
        </span>
        <div class="absolute -bottom-4 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
      </h2>
      <p class="text-xl text-gray-600">Profesionales altamente calificados comprometidos con tu caso</p>
    </div>

    {/* Grid de miembros */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {team.map((member, index) => (
        <article 
          class="group relative bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden"
        >
          {/* Imagen */}
          <div class="relative h-80 overflow-hidden">
            <img 
              src={member.image} 
              alt={`${member.name} - ${member.role}`}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
            {/* Efecto overlay */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          </div>

          {/* Contenido */}
          <div class="p-6">
            <h3 class="text-2xl font-bold text-gray-800 mb-2">{member.name}</h3>
            <p class="text-primary font-semibold mb-3">{member.role}</p>
            <p class="text-sm text-gray-500 mb-4">{member.experience}</p>
            
            {/* Especialidades */}
            <div class="mb-5">
              <h4 class="text-sm font-semibold text-gray-600 mb-3">Especialidades:</h4>
              <div class="flex flex-wrap gap-2">
                {member.specialties.map((specialty) => (
                  <span class="px-3 py-1 bg-gray-100 text-sm rounded-full">
                    {specialty}
                  </span>
                ))}
              </div>
            </div>

            {/* Contacto */}
            <div class="flex items-center gap-4 border-t pt-4">
              <a 
                href={`mailto:${member.contact.email}`}
                class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
                aria-label="Enviar correo electrónico"
              >
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </a>
              <a 
                href={member.contact.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 hover:bg-gray-100 rounded-lg transition-colors"
                aria-label="Perfil de LinkedIn"
              >
                <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </a>
            </div>
          </div>

          {/* Badge decorativo */}
          <div class="absolute top-4 right-4 bg-white/90 px-3 py-1 rounded-full text-sm font-semibold shadow-sm">
            ⚖️ Colegiado
          </div>
        </article>
      ))}
    </div>
  </div>
</section>