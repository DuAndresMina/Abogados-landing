        :class="{ 'opacity-0 invisible': !isOpen, 'opacity-100 visible': isOpen }"
        @click="isOpen = false"
      ></div>
      <div 
        class="fixed top-20 right-0 w-64 h-[calc(100vh-5rem)] bg-white shadow-xl transition-transform duration-300 transform"
        :class="{ 'translate-x-full': !isOpen, 'translate-x-0': isOpen }"
      >
        <div class="flex flex-col p-4 gap-4">
          {[
            { name: 'Inicio', href: '#' },
            { name: 'Servicios', href: '#servicios' },
            { name: 'Equipo', href: '#equipo' },
            { name: 'Casos de √âxito', href: '#casos' },
